<% if flash[:notice] %>
  <p class="flash-notice"><%= flash[:notice] %></p>
<% end %>

<div class="pages">

  <!--一覧画面-->
  <div class="index">
    <h2>Books</h2>

    <!--表の作成-->
    <table class="book-table">
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id) %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
      <% end %>
    </table>

  </div>

  <!--新規投稿-->
  <div class="post">
    <h3>New book</h3>

    <div class="new-form">
      <!--form_with使用-->
      <%= form_with model:@book, url:'/books', local:true do |f| %>

      <!--エラーメッセージ-->
      <% if flash[:alert] %>
        <p class="flash-alert"><%= flash[:alert] %></p>
      <% end %>

        <div class="form-content">
          <p>Title</p>
          <%= f.text_field :title %>
        </div>
        <div class="form-content">
          <p>Body</p>
          <%= f.text_area :body %>
        </div>
        <div class="bottom"><%= f.submit 'Create Book' %></div><% end %>
    </div>
  </div>

</div>