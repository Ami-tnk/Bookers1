<!--一覧画面-->
<h1>Books</h1>

<!--表の作成-->
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
 
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td>
      Show,Edit,Destroy
    </td>
  </tr>
  <% end %>
  
</table>

<!--新規投稿フォーム-->
<h1>New book</h1>
<!--form_with使用-->
<%= form_with model:@book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>